<script>
// Função para adicionar o preço do produto ao carrinho
function adicionarProduto(preco) {
  var totalAtual = parseFloat(document.getElementById('total').textContent.replace('R$', '').replace(',', '.'));
  var novoTotal = totalAtual + preco;
  document.getElementById('total').textContent = 'R$' + novoTotal.toFixed(2).replace('.', ',');
}
</script>
