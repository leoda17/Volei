 <script>
 // Função para adicionar botões de quantidade a cada produto
 function adicionarBotoesQuantidade() {
     var produtos = document.querySelectorAll('.produto');
     produtos.forEach(function(produto) {
         var quantidadeDiv = document.createElement('div');
         quantidadeDiv.classList.add('quantidade');
 
         var inputQuantidade = document.createElement('input');
         inputQuantidade.type = 'number';
         inputQuantidade.value = 1;
         inputQuantidade.min = 1;
         inputQuantidade.max = 99;
         quantidadeDiv.appendChild(inputQuantidade);
 
         produto.appendChild(quantidadeDiv);
     });
 }
 
 // Chamar a função para adicionar botões de quantidade
 adicionarBotoesQuantidade();
 </script>
